<div class="input-field col s12 m6 l9">
  <%= f.text_field :title, value: post.try(:title) %>
  <%= f.label :title %>
</div>

<div class="section">
  <div class="input-field col s12 tooltipped"
       data-position="top" data-delay="10" html="true"
       data-tooltip="Use &#x25B2 &#x25BC to select a prediction and &#x21B9 to insert it in the text field">
    <%= f.text_area :text, disabled: true, id: 'user-text', class: 'materialize-textarea',
                    autocomplete: 'off', value: post.try(:text) %>
    <%= f.label :text %>
  </div>
</div>

<div class="section">
  <div class="col s12">
  <%= render partial: 'predictions' %>
  </div>
</div>

<div class="section">
  <div class="col s3">
    <% if logged_in? %>
    <%= f.submit :submit, class: "btn waves-effect waves-light"%>
    <% else %>
    <p><%= link_to "Login", new_session_path %> to save your post!</p>
    <% end %>
  </div>
</div>